# Dockerfile for Intelligence Orchestrator
FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    git curl ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Install uv
RUN pip install --no-cache-dir uv==0.5.0

# Copy project files (include lock file for reproducible builds)
COPY pyproject.toml uv.lock* ./
COPY src/ src/

# Install dependencies
RUN uv pip install --system --no-cache -e .

ENV PYTHONPATH=/app/src
# Allow default Kafka config for container startup
# Production should override KAFKA_BOOTSTRAP_SERVERS via docker-compose/k8s
ENV OMNIINTELLIGENCE_ALLOW_DEFAULT_KAFKA=true

# Expose health check port
EXPOSE 8000

# Run orchestrator
# Note: This runs the canonical orchestrator node (not the legacy v1_0_0 version)
# The node runs in stub mode with health checks; full functionality requires
# ONEX container injection via RuntimeHostProcess
CMD ["python", "-m", "omniintelligence.nodes.intelligence_orchestrator"]
