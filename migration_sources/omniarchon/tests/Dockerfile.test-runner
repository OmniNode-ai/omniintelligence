# Test Runner Dockerfile for Archon Integration Tests
# Provides isolated Python environment for running comprehensive test suite

FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install poetry and Python testing dependencies
RUN pip install --no-cache-dir poetry

# Copy poetry configuration and install dependencies
COPY pyproject.toml poetry.lock* /app/
RUN poetry config virtualenvs.create false && \
    poetry install --no-dev --no-interaction --no-ansi

# Copy test files
COPY tests/ /app/tests/
COPY pytest.ini /app/pytest.ini

# Create directories for test results and reports
RUN mkdir -p /app/test-results /app/test-reports

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Default command
CMD ["poetry", "run", "python", "-m", "pytest", "tests/integration/", "-v", "--tb=short"]
